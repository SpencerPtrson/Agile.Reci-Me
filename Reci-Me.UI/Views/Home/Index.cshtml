<body onload="RecipeDaily()">
    <div class="wrapper mt-4" style="width:100%; text-align:center; max-width:1200px">
        <div class="hero-text">
            <h1 id="randText"><mark>Recipe of the week: Buffalo Wings</mark></h1>
        </div>
        <div class="hero-image">
            <img id="randImg" class="img-fluid" src="~/css/img/wings.jpg" height="350" width="350" style="border-radius: 15px" />
        </div>
        @*<div>
        For an eventual brief description of the dish
        <p id="desc"></p>
        </div>*@
        <div class="hero-text">
            <br />
        </div>
    </div>
    <script src="~/js/recipeOfTheDay.js">
    </script>
</body>

@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc;
@model Reci_Me.UI.ViewModels.UserVM

@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div style="width:100%; text-align:center">
        <h1>Need Help? Send Us A Message</h1>
        <br />
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.FullName" class="control-label" style="padding-right:580px"></label>
                <select asp-for="User.FullName" class="form-control"
                        asp-items="@(new SelectList("fullname"))"></select>
                <span asp-validation-for="User.FullName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="User.Email" class="control-label" style="padding-right:580px"></label>
                <select asp-for="User.Email" class="form-control"
                        asp-items="@(new SelectList("email"))"></select>
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="text" placeholder="Enter Message Here" class="form-control" />
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div class="ps-2" style="width:100%; text-align:center">
    <a asp-action="Index" asp-controller="Home">Back to Main Menu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



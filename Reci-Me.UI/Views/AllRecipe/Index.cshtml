@{
    ViewData["Title"] = "All Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container fluid">
    <div style="width:100%; text-align:center">
        <h1>All Recipes</h1>
    </div>
    <br />
<div class="row">
    <div class="col-md-2 sidebar rounded-top">
        <div class="header rounded-top">
            <h4>Recipes</h4>
        </div>
        <div>
            @await Component.InvokeAsync("Sidebar")
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-md-2 main body-content" style="width: 250px">
            <div class="card mb-2 main body-content">
                <div class="card-header header">
                    <h3>@item.Name</h3>
                </div>

                @*<div class="card-img">
                    <img class="imagepropmed" src="~/images/Recipe/@item.MainImagePath" />
                </div>*@
                <div class="main body-content">
                    @await Component.InvokeAsync("RecipeCard", item.Name)
                </div>

                @*<div class="card-body">
                    <h5>@item.Name</h5>
                    <h5>@item.Servings</h5>
                    <h5>@item.PrepTime</h5>
                    <h5>@item.TotalTime</h5>
                </div>*@
                <div class="card-footer">
                    @*<a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Details">Details</a>
                    <a class="btn btn-sm btn-primary" asp-route-id="@item.Id" asp-action="Delete">Delete</a>*@
                </div>
            </div>
        </div>
    }

</div>
